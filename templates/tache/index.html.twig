{% extends 'base.html.twig' %}

{% block title %}Hello TacheController!{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Fond gris clair */
        }
        .card {
            margin: auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Ombre */
        }
        .list-group-item {
            display: flex;
            justify-content: space-between;
            align-items: center; /* Aligne verticalement */
        }
        .card {
            max-width: 30rem;
        }
        .card-body.form-section {
            background-color: #e9ecef; /* Fond gris clair pour le formulaire */
        }
        .btn {
            border-radius: 0; /* Boutons carrés */
            width: 40px; /* Largeur fixe pour carrés parfaits */
            height: 40px; /* Hauteur fixe pour carrés parfaits */
            display: inline-flex;
            justify-content: center;
            align-items: center;
            padding: 0;
            font-size: 1.2rem; /* Taille des icônes */
        }
        .btn-sm {
            width: 30px; /* Carrés plus petits pour les boutons minuscules */
            height: 30px;
            font-size: 1rem;
        }
    </style>
{% endblock %}
